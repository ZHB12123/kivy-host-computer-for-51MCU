#:import C kivy.utils.get_color_from_hex

<Background>:
    BoxLayout:
        padding:10
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: '2.jpg'
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9,1
            pos_hint:{'center_x':0.5,'center_y':0.5}
            GridLayout: 
                pos_hint:{'center_x':0.5,'center_y':0.5}
                cols:8
                id: LEDs
                spacing:5
                

        BoxLayout:
            spacing:10   
            orientation:'horizontal' 
            size_hint_y: None
            size_hint_x: 0.6
            pos_hint:{'center_x':0.5,'center_y':0.5}
            Button:
                size_hint_y: None
                text: 'clear'
                font_size: 20
                on_release:root.clear()
            Button:
                size_hint_y: None
                text: 'create_hex'
                font_size: 20
                on_release:root.create_hex()
        TextInput:
            spacing:10
            size_hint_y: None
            size_hint_x: 0.6
            pos_hint:{'center_x':0.5,'center_y':0.5}
            id:hex
            text:''
            multiline:'True'
            font_size: 20
            text_size: self.size
        Button:
            spacing:10
            size_hint_y: None
            size_hint_x: 0.6
            pos_hint:{'center_x':0.5,'center_y':0.5}
            text: 'send_data'
            font_size: 20
            on_release:root.send_data()
        

<LedButton>:
    #size_hint: None,None
    width:self.height

    text_size: self.size
    font_size: '18sp'
    valign: 'middle'
    halign:'center'
    background_color:1.0, 1.0, 1.0, 0.8
    on_press:root.status()
    
        